{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build SDL2 Sokoban (MSVC)",
      "type": "shell",
      "command": "cl.exe",
      "args": [
        "/EHsc",
        "src\\main.cpp",
        "engine.cpp",
        "SDL2.lib",
        "SDL2main.lib",
        "Shell32.lib",
        "/I", "SDL2\\include",
        "/link",
        "/LIBPATH:SDL2\\lib\\x64",
        "/SUBSYSTEM:WINDOWS",
        "/OUT:sokoban.exe"
      ],
      "options": {
        "cwd": "${workspaceFolder}/projects/project04"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}
